{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@pagopa/io-app-design-system": ["./src/index"],
      "@pagopa/io-app-design-system/core": ["./src/core"]
    },
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6", "dom", "es2019"],
    "jsx": "react",
    "moduleResolution": "node",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "useUnknownInCatchVariables": true
  },
  "exclude": [
    "android",
    "ios",
    "node_modules"
  ]
}
